<Project>
  <PropertyGroup>
	<Frameworks>|net47|net471|net472|net48|</Frameworks>
  </PropertyGroup>
  <Target Name="CopyFiles" BeforeTargets="Build" Condition="$(Frameworks.Contains('|$(TargetFramework)|'))">
    <ItemGroup>     
      <File Include="$(MSBuildThisFileDirectory)..\Binary\net47\nlopt_x32.dll"></File>
	  <File Include="$(MSBuildThisFileDirectory)..\Binary\net47\nlopt_x64.dll"></File>
    </ItemGroup>
    <Copy SourceFiles="@(File)" DestinationFolder="$(OutDir)"></Copy>
  </Target>
</Project>